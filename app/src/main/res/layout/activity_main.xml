<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Back_color"
    tools:context=".MainActivity">

    <com.example.andrewskuhndasilva.mymeasure.widget.CustomSeekBar
        android:id="@+id/seek_arc"
        android:layout_width="228dp"
        android:layout_height="228dp"
        android:layout_gravity="center"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:clickable="false"
        app:arcWidthRate="0.5"
        app:endAngle="45"
        app:endColor="0xFF4B5300"
        app:endValue="380"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:lineColor="0xFF4B53"
        app:markColor="0xff33B5E5"
        app:markSize="30"
        app:progress="24"
        app:progressTextColor="0xffffffff"
        app:progressTextSize="35"
        app:showMark="true"
        app:showProgress="true"
        app:startAngle="-225"
        app:startColor="0xFFFFF314"
        app:startValue="-70" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="274dp"
        android:layout_height="31dp"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Temeperatura atual (Â°C)"
        android:textColor="@android:color/background_light"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <com.github.mikephil.charting.charts.HorizontalBarChart
        android:id="@+id/chart"
        android:layout_width="389dp"
        android:layout_height="259dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seek_arc" />


    <android.support.constraint.ConstraintLayout
        android:id="@+id/no_usb_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:background="@color/Back_color"
        android:visibility="visible"
        tools:layout_editor_absoluteY="186dp"
        tools:visibility="gone">

        <TextView
            android:id="@+id/text_no_usb"
            android:layout_width="334dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Nenhum dispositivo conectado"
            android:textColor="@android:color/background_light"
            android:textSize="23sp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>
